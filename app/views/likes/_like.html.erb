<% if user_signed_in? %>
  <% if post.liked_by?(current_user) %>
    <i class="icon-heart-solid fa-solid fa-heart"></i>
    <%= link_to "#{post.like_count}件", post_likes_path(post.id), method: :delete, class: "post_likes", remote: true %>
  <% else %>
    <i class="icon-heart-regular fa-regular fa-heart"></i>
    <%= link_to "#{post.like_count}件", post_likes_path(post.id), method: :post, class: "post_likes", remote: true %>
  <% end %>
  <i class="fa-solid fa-comment"></i>
  <%= post.comment_count %>件
<% else %>
  <i class="icon-heart-regular fa-regular fa-heart"></i>
  <span class="post_likes" style="display: inline-block;"><%=post.like_count %>件</span>
  <i class="fa-solid fa-comment"></i>
  <%= post.comment_count %>件
<% end %>
